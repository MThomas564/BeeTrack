{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "outDir": "./dist/server",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@shared/*": ["src/shared/*"]
    },
  },
  "include": ["src/server/*", "src/shared/*"]
}